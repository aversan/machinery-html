{% import "../icons/icons.twig" as icons %}

{% set items = [
  { icon: 'image', text: 'Добавить фото' },
  { icon: 'map-marker', text: 'Место на карте' },
  { icon: 'edit', text: 'Редактировать' },
  { icon: 'delete', text: 'Удалить', type: 'danger' }
] %}

{% for item in items %}
  <span class="btn btn-link btn-only-icon btn-xl btn-link-{{ item.type | default("primary") }} btn-icon" title="{{ item.text }}">
    {{ icons.get(item.icon|lower) }}
  </span>
{% endfor %}
